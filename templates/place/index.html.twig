{% extends 'base.html.twig' %}

{% block title %}Place index{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}

<div class="container form_search d-flex justify-content-center">
  <form action="">
      <div class="form_content">
          <input type="text" placeholder="Rechercher une destination">
          <button type="submit"><i class="fas fa-search"></i></button>
      </div>
  </form>
</div>


<section class=" container">
  <p>
  <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Recherche par ville
  </button>
</p>
<div class="collapse" id="collapseExample">
  <div class="card card-body">
    <div class="list-group">
    {% for ville in villes %}
  <a href="" class="list-group-item list-group-item-action text-capitalize">{{ ville }}</a>
  {% endfor %}
</div>
  </div>
</div>
</section>


<section class="place_recommander container mb-5">
  <h1 class="mb-4">Nos recommandation de la semaine</h1>
  <div class="row align-items-center">
    <a href="#" class="col-md-4 col-sm-12">
        <img src="{{ places[0].images[0].name }}" alt="">
        <p class="mt-2"><i class="fas fa-map-marker-alt me-2"></i> {{ places[0].city }} </p>
        <p class="fs-5"> {{ places[0].title }} </p>
    </a>
    <a href="#" class="col-md-4 col-sm-12">
        <img src="{{ places[0].images[0].name }}" alt="">
        <p class=" mt-2"><i class="fas fa-map-marker-alt me-2"></i> {{ places[0].city }} </p>
