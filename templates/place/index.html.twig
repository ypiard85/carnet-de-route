        <p class="mt-2"><i class="fas fa-map-marker-alt me-2"></i> {{ places[0].city }} </p>
        <p class=" fs-5"> {{ places[0].title }} </p>
    </a>
  </div>
</section>



<div class="place container mb-5">
    <h1 class="mb-4">Idée de lieux à visiter</h1>
      <div class="carousel-place d-flex align-items-center">
        {% for place in places %}
            <a href="/place/{{ place.id }}" class="card text-black">
            <img src="{{ place.images[0].name }}" class="card-img" alt="...">
            <div class="card-body">
              <p class="card-text"><i class="fas fa-map-marker-alt me-2"></i> {{ place.city }} </p>
              <p class="card-text fs-5"> {{ place.title }} </p>
            </div>
            </a>
          {% endfor %}
        </div>
    </div>
  </div>

<div class="place container">
  <h1 class="mb-4">Lieux les plus <i class="fas fa-heart text-danger" style="font-size: 48px;"></i></h1>
