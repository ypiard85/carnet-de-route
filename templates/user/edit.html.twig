{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <section>
        <div class="form container">
            <h1>Editer votre description</h1>
            {{ form_start(form) }}
            {{ form_row(form.description, {'label' : false} ) }}
            {{ form_row(form.pseudo, {'attr' : {'class' : 'd-none'}, 'label' : false } ) }}
            {{ form_row(form.email, {'attr' : {'class' : 'd-none'}, 'label' : false } ) }}
            <button class="btn btn-success mt-3">{{ button_label|default('Sauvegarder') }}</button>
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}
