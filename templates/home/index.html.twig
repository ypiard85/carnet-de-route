        <a href="{{ path('carnet_de_route') }}?q=campagne" class="swiper-slide"><img class="rounded" src="{{ asset('./accueil/theme/campagne.jpg') }}" alt=""><p class="fs-5">Campagne</p></a>
        <a href="{{ path('carnet_de_route') }}?q=plage" class="swiper-slide"><img class="rounded" src="{{ asset('./accueil/theme/plage.jpg') }}" alt=""><p class="fs-5">Plage</p></a>
      </div>
</div>
</div>


<div class="container mt-5 coup_de_coeur rounded d-flex align-items-center border" style="background-image: url('{{ asset("./accueil/theme/coup_de_coeur.jpg") }}') ;">
  <a href="{{ path('carnet_de_route') }}?filtre=aime" class="btn btn-warning d-block">Découvrez nos coups de coeurs</a>
</div>

<div class="container type_voyageur mt-5">
