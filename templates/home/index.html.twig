    <div class="type_option text-center">
      <p class="fs-1 title">Novice</p>
      <i class="fas fa-star text-warning fs-1 mb-3"></i>
       <p><small>Moins de 30 publications</small></p>
    </div>

    <div class="type_option text-center">
      <p class="fs-1 title">Aquerie</p>
      <i class="fas fa-star text-warning fs-1 mb-3"></i>
      <i class="fas fa-star text-warning fs-1 mb-3"></i>
       <p><small>Entre 30 et 50 publications</small></p>
    </div>

    <div class="type_option text-center">
      <p class="fs-1 title">Expert</p>
      <i class="fas fa-star text-warning fs-1 mb-3"></i>
      <i class="fas fa-star text-warning fs-1 mb-3"></i>
      <i class="fas fa-star text-warning fs-1 mb-3"></i>
       <p><small>Plus de 300 publications</small></p>
    </div>

  </div>
</div>

<!--Gagner des cadeaux-->
<div class="my-5 container">
  <div class="row flex-md-row flex-column-reverse align-items-center">
    <div class="col-md-7">
      <img class="img-fluid" src="{{ asset('./galery/plan1.png') }}" alt="">
    </div>
    <div class="col-md-5 mb-3">
      <h1>Tantez de gagner des cadeaux </h1>
      <h2>En partageant vos coups de coeurs</h2>
      <a href="{{ path('place_new') }}" class="btn btn-primary btn-lg mt-3">Je partage <i class="fas fa-caret-right" ></i></a>
    </div>
    </div>
</div>


{% block javascrips %}
<script src="https://unpkg.com/swiper/swiper-bundle.js"></script>


  <script>



       var swiper = new Swiper(".homeswiper", {
        spaceBetween: 30,
        effect: "fade",
        centeredSlides: true,
        autoplay: {
          delay: 3000,
          disableOnInteraction: false,
        },

      });



      var explorswiper = new Swiper(".explor_swiper", {
        slidesPerView: 2,
        spaceBetween: 20,
        pagination: {
          el: ".swiper-pagination",
          clickable: true,
        },
        navigation: {
          nextEl: ".explor_next",
          prevEl: ".explor_prev",
        },
        breakpoints: {
          500: {
            slidesPerView: 2,
            spaceBetween: 20,
          },

          1024: {
            slidesPerView: 3,
            spaceBetween: 50,
          },
        },

      });

      var theme = new Swiper(".theme", {
        slidesPerView: 2,
        spaceBetween: 20,
        breakpoints: {
          640: {
            slidesPerView: 2,
            spaceBetween: 20,
          },

          1024: {
            slidesPerView: 3,
            spaceBetween: 50,
          },
        }
      });

  </script>
{% endblock %}



