{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}

    <section class="container template_email" style="width: 700px; max-width: 100%; margin: 50px auto;">
        <div class="shadow">
            <div class="template_top bg_bleu text-white text-center top_margin py-3">
                <h3>Réinitialiser le mot de passe</h3>
            </div>
        <div class="template_center p-3">
            <div class="text-center my-3">
                <img width="250"  src="{{ asset('logo.png') }}" alt="">
            </div>
            {% for flashError in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
            <div class="m-3">
                <p class="py-3">
                    Entrez votre adresse e-mail et nous vous
                    enverrons un lien pour réinitialiser votre mot de passe.
                </p>
                {{ form_start(requestForm) }}
                {{ form_row(requestForm.email) }}
                <div class="my-3">
                    <button class="btn btn-primary ">Réinitialiser</button>
                    <a class="rouge" href="{{ path('home') }}">Revenir à l'accueil</a>
                </div>
                {{ form_end(requestForm) }}
            </div>
        </div>
    </div>
    </section>

{% endblock %}