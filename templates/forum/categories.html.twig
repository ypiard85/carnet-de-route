{% extends 'base.html.twig' %}

{% block title %}Hello ForumController!{% endblock %}

{% block body %}

    <section class="container">
        <div class="forum">
            <!--Titre de la catÃ©gorie-->
            <div class="row mx-1  mt-2">
                {% if cats == 'logement' %}
                    <div class="badge bg-secondary col-md-6  m-auto text-center py-3 text-white rounded">
                    {% elseif cats == 'visa' %}
                    <div class="badge bg-warning col-md-6  m-auto text-center py-3 text-white rounded">
                    {% elseif cats == 'vie quotidienne' %}
                    <div class="badge bg-success col-md-6  m-auto text-center py-3 text-white rounded">
                    {% elseif cats == 'transport' %}
                    <div class="badge bg-danger col-md-6  m-auto text-center py-3 text-white rounded">
                {% endif%}
                        <h1>{{ cats }}</h1>
                    </div>

            </div>
            </div>
            </div>
            </div>


            <div class="content my-5">
                <div class="btn-filtre d-flex justify-content-between">
                    <div class="left">
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a href="{{ path('forum_accueil') }}" type="button" class="btn btn-info border">Categorie</a>
                            <a href="{{ path('forum_sujet') }}"  type="button" class="btn btn-info border">Derniers sujets</a>
                          </div>
                    </div>
                    <div class="right">
                        <a href=" {{ path('sujet_new') }} " class="btn fw-bold" style="background-color: orange; color: white;">Nouveau sujet</a>
                    </div>
                </div>
            </div>
        </div>

        <table>
        {% for sujet in sujets %}
                <tr class="categorie_table">
                    <td class="left text-center">
                        <a href="{{ path('user_show', {'id' : sujet.user.id }) }}" class="fw-bold  d-block">{{ sujet.user.pseudo }}</a>
                    </td>
                    <td class="middle">
                        <a href="{{ path('sujet_view', {'id' : sujet.id, 'title' : sujet.title }) }}">
                            {{ sujet.title }}
                        </a>
                        <p>Il y a {{ sujet.createdAt | ago }}</p>
                    </td>
                    <td class="right text-center ">
                        <i class="far fa-comment fs-3"></i>
                        <p>{{ sujet.sujetResponses | length }}</p>
                    </td>
                </tr>

                {% endfor %}
            </table>
    </section>

{% endblock %}