{% extends 'base.html.twig' %}

{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}


    <div class="container mtop">
        <div class="card form rounded-0">
            <div class="card-header bg_bleu rounded-0 fs-3 text-white">
              Créer un compte
            </div>
            <div class="card-body">
                {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}
                {{ form_start(registrationForm) }}
                    <div class="row g-2 align-items-center">
                        <div class="col-md-3">
                            <label for="inputEmail">Pseudo</label>
                        </div>
                        <div class="col-md-9">
                            {{ form_row(registrationForm.pseudo) }}
                        </div>
                        <div class="col-md-3">
                            <label for="inputEmail">Email</label>
                        </div>
                        <div class="col-md-9">
                            {{ form_row(registrationForm.email) }}
                        </div>
                        <div class="col-md-3">
                            <label for="inputEmail">Mot de passe</label>
                        </div>
                        <div class="col-md-9">
                            {{ form_row(registrationForm.plainPassword.first) }}
                        </div>
                        <div class="col-md-3">
                            <label for="inputEmail">Confirmer votre mot de passe</label>
                        </div>
                        <div class="col-md-9">
                            {{ form_row(registrationForm.plainPassword.second) }}
                        </div>
                        <div class="col-md-10">
                            {{ form_row(registrationForm.agreeTerms) }}
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Créer un compte</button>
                    {{ form_end(registrationForm) }}

                </div>

          </div>
    </div>

{% endblock %}
