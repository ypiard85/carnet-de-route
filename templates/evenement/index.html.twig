{% extends 'base.html.twig' %} {% block title %}Hello ActualiteController!{%
endblock %}

{% block body %}

<div class="banner_evenement top_margin d-flex justify-content-center align-items-center">
  <h1 class="text-white text-center">EVENEMENTS</h1>
</div>

<div class="container my-5">
      <h4 class="mb-4 bleu">Evénements à venir</h4>
      <div>
        <div class="d-flex flex-wrap">
          {% for evenement in evenements %}
          <div class="card me-3 mb-3 position-relative" style="width: 400px; max-width: 100%">
            <p class="position-absolute bleu" style="right: 10px; top: 10px;">
              {{ evenement.createdAt | localizeddate('none', 'none', null, null, 'd MMMM Y') }}
            </p>
            <div class="card-body">
              <div class="border-bottom border-3  p-3">
                <h4 class="card-title ">{{ evenement.titre }}</h4>

                <h6 class="card-subtitle mb-2 text-muted"><i class="far fa-calendar-alt"></i> {{ evenement.date }}</h6>
                <h5><span class="badge bg_bleu">{{ evenement.user.pseudo }}</span></h5>
              </div>
                <p class="card-text mt-3 reset">{{ evenement.content[:150] | raw }}</p>
                <div class="mt-3">
                  <a href="{{ path('evenement_show', {'id' : evenement.id }) }}" class="btn btn-primary">Voir l'évènement</a>
                  {% if evenement.user == app.user %}
                  <a href="{{ path('evenement_edit', {'id' : evenement.id } ) }}" class="btn btn-success"><i class="far fa-edit"></i></a>
                  {% endif %}
                </div>
              </div>
            </div>
            {% endfor %}
          </div>
      </div>
   </div>
</div>

{% endblock %}
